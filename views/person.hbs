                                    <label class="control-label col-md-2" for="chkBoxBlocked">Bloqueado:</label>
                                    <div class="col-md-10">
                                        <input id="chkBoxBlocked" name="blocked" type="checkbox" class="switch-small" data-on-text="SIM" data-off-text="NÃO" />
                                    </div>
                                </div>
                                <div class="form-group hidden" id="liBlockedReason">
                                    <label class="control-label col-md-2" for="txtBoxBlockedReason">Razão do bloqueio:</label>
                                    <div class="col-md-10">
                                        <textarea id="blockedReasonTextArea" name="blockedReason" title="Razão do bloqueio" placeholder="Razão do bloqueio" class="form-control enterastab"></textarea>
                                    </div>
                                </div>
