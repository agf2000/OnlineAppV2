                                            </select>
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" onclick="getSalesPeople(); return false;" value="1">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group hidden" id="liIndustries">
                                    <label class="control-label col-md-2" for="industriesTextBox">Atividade:</label>
                                    <div class="col-md-10">
                                        <input id="industriesTextBox" name="industries" type="text" class="form-control enterastab" title="Profissão" placeholder="Digite 2 letras ou mais para achar a profissão">
                                    </div>
                                </div>
                                <div class="form-group has-feedback hidden" id="liEIN">
                                    <label class="control-label col-md-2" for="einTextBox">CNPJ:</label>
